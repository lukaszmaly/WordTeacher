@model IEnumerable<English.Models.Entry>

@{
    ViewBag.Title = "Index";
}

<h2>List of words and sentences</h2>


<form action="/Entries" method="post">
    <p>
        @Html.TextBox("name", "", new { @class = "form-control" })
        <input type="submit" value="Search" class="btn btn-default" />
    
        @Html.ActionLink("Create new entry", "Create", null, new { @class = "btn btn-default" })
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnglishWord)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EnglishWord)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EntryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EntryId })
        </td>
    </tr>
}

</table>
